<!DOCTYPE html>
<html>
<head>
  <%- include("./part/head") %>
  <title>Blogs</title>
  <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</head>
<body>
  
<section class="text-gray-600 body-font">
  <div class="container px-5 py-24 mx-auto">
    <h2 class="text-3xl   font-sans  font-bold tracking-tight text-slate-700 sm:text-3xl sm:leading-snug mb-12 text-center">EV Charging Stations in  <%= blogs.city %></h2><br>
    <div class="flex flex-wrap -m-4">
      <% blogs.forEach(row => { %>
      <div class="p-4 md:w-1/3">
        <div class="h-full rounded-xl shadow-cla-blue bg-gradient-to-r from-indigo-50 to-blue-50 overflow-hidden">
          <!-- <img class="lg:h-48 md:h-36 w-full object-cover object-center scale-110 transition-all duration-400 hover:scale-100" src="" alt="blog"> -->
          <div class="p-6">
           
            <h3 class="tracking-widest text-xs title-font font-medium text-gray-400 mb-1"><%= row.state.name %></h2>
            <h2 class="title-font text-lg font-medium text-gray-600 mb-3"><i class="fa-solid fa-city"></i> - <%= row.city.name %></h1>
            <h1 class="title-font text-lg font-medium text-gray-600 mb-3"><i class="fa-solid fa-charging-station"></i> - <%= row.EVname %></h1>
            <p class="leading-relaxed mb-3"><i class="fa-solid fa-location-dot"></i> - <%= row.location %></p>
            <p class="leading-relaxed mb-3"><i class="fa-solid fa-phone"></i> - +91 <%= row.number %></p>
            <p class="leading-relaxed mb-3"><i class="fa-solid fa-bolt"></i> - <%= row.descriction %></p>
            <div class="flex items-center flex-wrap ">
              <a type="button" href="<%= row.locUrl %>" class="bg-gradient-to-r from-cyan-400 to-blue-400 hover:scale-105 drop-shadow-md  shadow-cla-blue px-4 py-1 rounded-lg"><i class="fa-solid fa-location-dot"></i> Map Navigate</a> 
            </div>
           
          </div>
         
        </div>
        
      </div>
      <% }) %>
    </div><br>
    
    <a href="/finder" class="inline-flex h-12 w-full items-center justify-center rounded-full bg-green-500 px-6 font-medium tracking-wide text-white shadow-md outline-none transition duration-200 hover:bg-green-400 focus:ring sm:w-auto">Back to Search</a>

  </div>
</section>
  
</body>
</html>
